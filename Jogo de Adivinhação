import java.util.Scanner;
import java.util.Random;

public class Adivinhacao {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Random rand = new Random();
        int numeroSecreto = rand.nextInt(100) + 1; // 1 a 100
        int tentativa = 0;
        int palpite;

        System.out.println("Tente adivinhar o número entre 1 e 100!");

        do {
            System.out.print("Seu palpite: ");
            palpite = sc.nextInt();
            tentativa++;

            if(palpite < numeroSecreto) System.out.println("Mais alto!");
            else if(palpite > numeroSecreto) System.out.println("Mais baixo!");
        } while(palpite != numeroSecreto);

        System.out.println("Parabéns! Você acertou em " + tentativa + " tentativas.");
    }
}
